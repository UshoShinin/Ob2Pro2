@if (Model == null)
{
    <form action="/Cliente/AgregarComun" method="post" class="gesForm">
        <fieldset>
            <legend>Agregar Cliente Comun</legend>
            <div class="form-group">
                <lable for="Nombre">Nombre:</lable>
                <input type="text" name="Nombre" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="Email">Email:</lable>
                <input type="email" name="Email" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="Fecha">Fecha:</lable>
                <input type="date" class="form-control" name="Fecha" required max="@(DateTime.Now.Year)-@(DateTime.Now.Month)-@(DateTime.Now.Day)">
            </div>
            <div class="form-group">
                <lable for="Procedencia">Procedencia: </lable>
                <select name="Procedencia" class="form-control">
                    @for (int i = 0; i < Administradora.Instancia.procedencias.Length; i++)
                    {
                        <option value="@(i+1)">@Administradora.Instancia.procedencias[i]</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <lable for="Direccion">Dirección:</lable>
                <input type="text" name="Direccion" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="Cedula">Cédula:</lable>
                <input type="text" name="Cedula" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="Celular">Celular:</lable>
                <input type="text" name="Celular" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="username">Nombre de Usuario:</lable>
                <input type="text" name="username" class="form-control" required>
            </div>
            <div class="form-group">
                <lable for="password">Contraseña:</lable>
                <input type="text" name="password" class="form-control" required>
            </div>
            <input type="submit" value="Agregar">
        </fieldset>
    </form>
    <h2 class="MensajeError">@ViewBag.ErrMsg</h2>
}
else if (Model is ClienteComun)
{
    <h2 class="MensajeError">ADioooooo</h2>
}
else
{
    <h2 class="MensajeError">Holaaaaaa</h2>
}
