@using Dominio;
@model Cliente
@{
    ViewBag.Title = "Index";
}
<h2>Cliente Común</h2>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fecha de registro</th>
            <th>Procedencia</th>
            <th>Direccion</th>
            <th>Cédula</th>
            <th>Celular</th>
            <th>Nombre de ususario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cliente C in Administradora.Instancia.Clientes)
        {
            if (C is ClienteComun)
            {
                ClienteComun CC = (ClienteComun)C;
                <tr>
                    <td>@CC.Nombre</td>
                    <td>@CC.Email</td>
                    <td>@CC.Fecha.ToShortDateString()</td>
                    @switch ((int)CC.Procedencia)
                    {
                        case 1:
                            <td>Montevideo</td>
                            break;
                        case 2:
                            <td>Interior</td>
                            break;
                    }
                    <td>@CC.Direccion</td>
                    <td>@CC.Cedula</td>
                    <td>@CC.Celular</td>
                    <td>@CC.Usuario.Username</td>
                    <td>
                        <form action="/Cliente/ModificarClienteComun" method="post">
                            <input type="hidden" name="Email" value="@CC.Email">
                            <input type="submit" name="Modificar" value="Modificar">
                        </form>
                    </td>
                    <td>
                        <form action="/Cliente/EliminarClienteComun" method="post">
                            <input type="hidden" name="Email" value="@CC.Email">
                            <input type="submit" name="Eliminar" value="Eliminar">
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
